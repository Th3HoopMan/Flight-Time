<body>

    <!-- Page Content -->
    <div class="container" style="max-width: 600px">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Flight Time</h1>
                <p class="lead">We calculate so you can be lazy af! Woo!</p>
                <ul class="list-unstyled">
                    <li>Alpha</li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Find your estimated waiting </h3>
          </div>

          <form action="/result" method="POST" id="flightform">

          <div class="panel-body">
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="flightnum" class="col-form-label">Flight Identification Number</label>
                  <input class="form-control" type="text" value="1986" name="flightnum">
                </div>
                <div class="col-xs-6">
                  <label for="flightdate" class="col-form-label">Date of Origin Flight</label>
                  <input class="form-control" type="text" value="2016-09-09" name="flightdate">
                </div>
              </div>
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="loc-end-id" class="col-xs-6 col-form-label">My Location</label>
                  <input class="form-control" type="location" value="Georgia Tech" id="loc-end-id">
                </div>
                <div class="col-xs-6">
                  <button type="button" class="btn btn-default btn-md"  style="margin-top:20px;">
                    <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Current Location
                  </button>
                </div>
              </div>
          </div>
          <div class="panel-footer" style="alight">
              <button type="button" name="submit" id="submit" class="btn btn-primary">Submit</button>
          </div>
          </form>
        </div>



        <div id="result-panel">
        </div>


    </div>
    <!-- /.container -->

</body>

</html>