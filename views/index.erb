<body>

    <!-- Page Content -->
    <div class="container" style="max-width: 600px">

    <!-- Logo -->
        <div class="row" style="align: middle">
          <div class="col-md-4">
            <img id="plane-img" src="img/paper-plane.png" style="width: 65 px; height: 65px; margin-left: 3cm;" class="img-responsive"> </img>
            </div>
            <div class="col-md-6">
              <h2>Flight Time</h2>
            </div>
        </div>

        <div class="row text-center">
          <p>We do the calculations so you don't have to!</p>
        </div>
        <!-- /.row -->

        <!-- Panel Body -->
        <div class="panel">
          <div class="panel-heading">
            <h5 class="panel-title">Enter your Delta Airlines flight information</h5>
          </div>
          <form action="/result" method="POST" id="flightform">

          <!-- Flight Information (First div class) -->
          <div class="panel-body">
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="flightnum" class="col-form-label">What is your flight number?</label>
                  <input class="form-control" type="text" placeholder="e.g. 1986" name="flightnum" id="flightnum">
                </div>
                <div class="col-xs-6">
                  <label for="flightdate" class="col-form-label">When are you leaving?</label>
                  <input class="form-control" type="date" placeholder="e.g. 2016-09-09" name="flightdate" id="flightdate">
                </div>
              </div>

              <!-- Location -->
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="loc-end-id" class="col-form-label">Where are you starting?</label>
                  <input class="form-control" type="location" placeholder="e.g. Home Park, Atlanta, GA" id="loc-end-id">
                </div>
                <div class="col-xs-6">
                  <button type="button" class="btn btn-secondary btn-md"  style="margin-top:40px;height:34px;" id="gpsBtn">
                    <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <p id="gpsText">Current Location</p>
                  </button>
                </div>
              </div>

              <!-- Submit -->
              <div class="col-md-12">
              <button type="button" name="submit" id="submit" class="btn" style="width: 30%; height: 100%; margin: 0 auto;margin-left:-15px;">Submit</button>
              </div>
          </div>
          </form>
        </div>

        <div id="container-warning"></div>

        <div id="spinner-div" style="display:none;">
          <img src="/img/spinner.gif" id="spinner" align="middle"
          style="width:40px;height: 40px;display:block;margin:0 auto;margin-top:40px;margin-bottom:40px;">
        </div>

        <div id="result-panel"></div>

<div id="website-info" class="pull-right">
